{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx"
  ],
  "exclude": [
    "./server/**/*",
    "node_modules",
    "__tests__"
  ]
}